<%= stylesheet_link_tag "login" %>

    <div class="container-fluid">
        <%= image_tag "third_image.jpg" , id:"fundo", class:"w-100"%>
            <!-- Pills navs -->
            <div id="loginForm">
                <ul class="nav nav-pills nav-justified mb-3" id="ex1" role="tablist">
                    <li class="nav-item" role="presentation">
                        <a id="fundoLogin" class="nav-link active" id="tab-login" data-mdb-toggle="pill"
                            href="#pills-login" role="tab" aria-controls="pills-login" aria-selected="true">Login</a>
                    </li>

                    </li>
                </ul>
                <!-- Pills navs -->

                <!-- Pills content -->
                <div class="tab-content">
                    <div class="tab-pane fade show active" id="pills-login" role="tabpanel" aria-labelledby="tab-login">
                        <form>
                            <div class="text-center mb-3">
                                <p>Entre com:</p>
                                <button type="button" class="btn btn-link btn-floating mx-1">
                                    <i class="fab fa-facebook-f">
                                        <%= image_tag "facebook.png" , id:"iconFace"%>
                                    </i>
                                </button>

                                <button type="button" class="btn btn-link btn-floating mx-1">
                                    <i class="fab fa-google">
                                        <%= image_tag "google.png" , id:"iconGoogle"%>
                                    </i>
                                </button>
                                <p class="text-center">ou:</p>

                                <!-- Email input -->
                                <div class="form-outline mb-4">
                                    <input type="email" id="loginName" class="form-control" />
                                    <label class="form-label" for="loginName">Email ou usu√°rio</label>
                                </div>

                                <!-- Password input -->
                                <div class="form-outline mb-4">
                                    <input type="password" id="loginPassword" class="form-control" />
                                    <label class="form-label" for="loginPassword">Senha</label>
                                </div>

                                <!-- 2 column grid layout -->
                                <div class="row mb-4">
                                    <div class="col-md-6 d-flex justify-content-center">
                                        <!-- Checkbox -->
                                        <div class="form-check mb-3 mb-md-0">
                                            <input class="form-check-input" type="checkbox" value="" id="loginCheck"
                                                checked />
                                            <label class="form-check-label" for="loginCheck"> Lembrar de mim </label>
                                        </div>
                                    </div>

                                    <div class="col-md-6 d-flex justify-content-center">
                                        <!-- Simple link -->
                                        <a class="laranja" href="#!">Esqueceu a senha?</a>
                                    </div>
                                </div>

                                <!-- Submit button -->
                                <button type="submit" class="btn btn-primary btn-block mb-4">Sign in</button>

                                <!-- Register buttons -->
                                <div class="text-center">
                                    <p>Sem conta? <a class="laranja" href="#!">Registre-se</a></p>
                                </div>
                        </form>
                    </div>
                </div>
            </div>
            <!-- Pills content -->
    </div>